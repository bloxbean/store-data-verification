{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "rootDir": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@common/*": ["playwright-api-testing/common/*"],
      "@tests/*": ["playwright-api-testing/tests/*"],
      "@helpers/*": ["playwright-api-testing/common/helpers/*"],
      "@utils/*": ["playwright-api-testing/common/utils/*"],
      "@fixture/*": ["playwright-api-testing/tests/fixture/*"],
      "@hooks/*": ["playwright-api-testing/tests/hooks/*"],
      "@env/*": ["playwright-api-testing/env/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  }
}
